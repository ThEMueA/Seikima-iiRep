<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Shop</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .item-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-around;
        }

        .item {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 250px;
            text-align: center;
            padding: 15px;
            transition: transform 0.3s ease;
        }

            .item img {
                width: 100%;
                border-radius: 8px;
            }

            .item:hover {
                transform: scale(1.05);
            }

            .item h3 {
                margin: 15px 0;
            }

            .item p {
                color: #666;
                margin-bottom: 15px;
            }

        .price {
            font-size: 1.2em;
            color: #333;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            font-size: 0.9em;
        }

            .btn:hover {
                background-color: #218838;
            }

        /* Cart button style */
        .go-to-cart-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1em;
            margin-top: 30px;
            display: block;
            width: 200px;
            margin: 30px auto;
        }

            .go-to-cart-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Good deals</h1>

        <div class="item-list">
            <!-- Item 1 -->
            <div class="item">
                <img src="https://via.placeholder.com/250x200" alt="Item 1">
                <h3>Item 1</h3>
                <p>This is a description of item 1. It is a great product with amazing features.</p>
                <div class="price">19.99.lv</div>
                <button class="btn" onclick="addToCart('Item 1')">Add to Cart</button>
            </div>

            <!-- Item 2 -->
            <div class="item">
                <img src="https://via.placeholder.com/250x200" alt="Item 2">
                <h3>Item 2</h3>
                <p>This is a description of item 2. It is a high-quality product at a reasonable price.</p>
                <div class="price">9.99.lv</div>
                <button class="btn" onclick="addToCart('Item 2')">Add to Cart</button>
            </div>

           

        <!-- Go to Cart Button -->
        <a asp-action="bag" asp-route-id="@Model">
            <button class="go-to-cart-btn">Go to Cart</button>
        </a>
    </div>

    <script>
        function addToCart(itemName) {
            alert(itemName + " has been added to your cart!");
        }
    </script>
</body>
</html>