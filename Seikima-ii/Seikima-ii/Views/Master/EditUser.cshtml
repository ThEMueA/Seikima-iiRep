@model Seikima_ii.Models.User
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>
<div class="Edit-card">

    <form asp-action="EditUser" method="post">


        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" d="e" iname="e" asp-for="Username" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" id="password" name="password" asp-for="Password" placeholder="Enter your password" required>
        </div>
        <br>
        <div class="form-group">
            <label for="fname">First name</label>
            <input type="text" d="e" iname="e" asp-for="Fname" required>
        </div>
        <div class="form-group">
            <label for="lname">Last name</label>
            <input type="text" d="e" iname="e" asp-for="Lname" required>
        </div>
        <br>
        <div class="form-group">
            <label for="lname">img src</label>
            <input type="text" d="e" iname="e" asp-for="UserImg" required>
        </div>
        <br>

        <button type="submit" class="login-button">Save changes</button>
    </form>
